{% extends 'base.html.twig' %}

{% block title %}
    Tracked
{% endblock %}

{% block body %}

    <style>
        table {
            width: 100%;
            border: 1px solid black;
        }
    </style>

    {% include 'default/_paginator_track.html.twig' with {
        paginator: paginator,
        route_name: 'track_index_paginated',
    } %}

    <h1>
        {{ 'tracked.parts'|trans }}
    </h1>



    {% if paginator.data is defined and paginator.data|length %}
        <table class="zui-table">
            <th>{{ 'index.table'|trans }} </th>
            <th>{{  'name.table'|trans }} </th>
            <th>{{  'date.table'|trans }} </th>
            <th>{{  'price.table'|trans }}</th>

            {% for row in paginator.data %}
                <tr>
                    <td>{{ row.INDEKS }}</td>
                    <td>{{ row.NAZWA }}</td>
                    <td>{{ row.Data }}</td>
                    <td>{{ row.wartosc }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div>
            {{ 'error.empty_list'|trans }}
        </div>
    {% endif %}
    <a class="first after"  href= "{{ url('users_tracked') }}">{{ 'text.parts_tracked_by_users'|trans }}</a>

{% endblock %}